---
const { href, src, alt, category } = Astro.props;
import { Card, Inset, Text } from '@radix-ui/themes';
---

<a href={href} class="block col-lg-6 col-md-6 col-sm-12 mb-4 no-underline text-black border-2xl" aria-label={`Learn more about ${category}`}>
    <Card size="2" style={{ width: '100%' }} className="border-4 rounded-2xl overflow-hidden transform transition duration-300 ease-in-out hover:-translate-y-1 hover:scale-105 shadow-md hover:shadow-xl">
        <Inset clip="padding-box" side="top" pb="current">
            <img
                    src={src}
                    alt={alt}
                    class="w-full h-[400px] object-cover object-center"
            />
        </Inset>
        <Text as="p" size="5" className="text-center font-bold my-4 no-underline">
            {category}
        </Text>
    </Card>
</a>
